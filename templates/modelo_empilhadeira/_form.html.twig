{{ form_start(form) }}
<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Cadastro de Modelo de Empilhadeira</h5>
        </div>
        <div class="card-body">

            <div class="form-row">
                <div class="form-group col">
                    {{ form_row(form.fabricante) }}
                </div>
                <div class="form-group col">
                    {{ form_row(form.modelo) }}
                </div>
                <div class="form-group col">
                    {{ form_row(form.cargaTotal) }}
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col">
                    {{ form_row(form.caracteristicas) }}
                </div>
                <div class="form-group col">
                    {{ form_row(form.aplicacoes) }}
                </div>
            </div>

        </div>
        <div class="card-footer text-right">
            <button class="btn btn-success">
                {{ button_label|default('Salvar') }}
            </button>
        </div>
    </div>
</div>
{{ form_widget(form._token) }}
{{ form_end(form, {'render_rest': false}) }}
