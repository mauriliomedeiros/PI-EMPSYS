{% extends 'base.html.twig' %}

{% block content %}
    <br>


    <div class="container col-md-12">

        <div class="card shadow-sm">

            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Modelos de Empilhadeira</h5>
            </div>
            <div class="card-header d-flex justify-content-between">
                <a href="{{ path('modelo_empilhadeira_new') }}" class="btn btn-success">
                    Novo Modelo
                </a>
                <a href="{{ path('app_dashboard') }}" class="btn btn-info">
                    Voltar
                </a>
            </div>
            <div class="card-body p-3">
                <table class="table table-striped table-hover w-100">
                    <thead class="thead-light">
                    <tr>
                        <th style="width: 5%">ID</th>            {# col-md-1 ~ 1/12 = 8.33%, ajustei para 5% pra ser mais compacto #}
                        <th style="width: 8%">Fabricante</th>   {# col-md-1 #}
                        <th style="width: 10%">Modelo</th>      {# col-md-2 #}
                        <th style="width: 8%">Carga (kg)</th> {# col-md-1 #}
                        <th style="width: 35%">Características</th> {# col-md-4 #}
                        <th style="width: 25%">Aplicações</th>  {# col-md-3 #}
                        <th style="width: 15%">Ações</th>        {# col-md-2 #}
                    </tr>
                    </thead>
                    <tbody>
                    {% for modelo_empilhadeira in modelo_empilhadeiras %}
                        <tr>
                            <td>{{ modelo_empilhadeira.id }}</td>
                            <td>{{ modelo_empilhadeira.fabricante }}</td>
                            <td>{{ modelo_empilhadeira.modelo }}</td>
                            <td>{{ modelo_empilhadeira.cargaTotal }}</td>
                            <td>{{ modelo_empilhadeira.caracteristicas }}</td>
                            <td>{{ modelo_empilhadeira.aplicacoes }}</td>
                            <td>
                                <a href="{{ path('modelo_empilhadeira_show', {'id': modelo_empilhadeira.id}) }}" class="btn btn-sm btn-outline-primary">Ver</a>
                                <a href="{{ path('modelo_empilhadeira_edit', {'id': modelo_empilhadeira.id}) }}" class="btn btn-sm btn-outline-secondary">Editar</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">Nenhum registro encontrado</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
