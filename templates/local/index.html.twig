{% extends 'base.html.twig' %}

{% block content %}
    <br>
    <div class="container col-md-12">

        <div class="card shadow-sm">

            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Locais</h5>
            </div>
            <div class="card-header d-flex justify-content-between">
                <a href="{{ path('local_new') }}" class="btn btn-success">
                    Novo cliente
                </a>
                <a href="{{ path('app_dashboard') }}" class="btn btn-info">
                    Voltar
                </a>
            </div>
            <div class="card-body p-3">
                <table class="table table-striped table-hover w-100">
                    <thead class="thead-light">
                    <tr>
                        <th style="width: 5%">ID</th>            {# col-md-1 ~ 1/12 = 8.33%, ajustei para 5% pra ser mais compacto #}
                        <th style="width: 20%">Nome</th>   {# col-md-1 #}
                        <th style="width: 20%">Cliente</th>      {# col-md-2 #}
                        <th style="width: 15%">Cidade</th> {# col-md-1 #}
                        <th style="width: 10%">Estado</th> {# col-md-4 #}
                        <th style="width: 15%">Ações</th>        {# col-md-2 #}
                    </tr>
                    </thead>
                    <tbody>
                    {% for local in locais %}
                        <tr>
                            <td>{{ local.id }}</td>
                            <td>{{ local.nome }}</td>
                            <td>{{ local.cliente.razaoSocial }}</td>
                            <td>{{ local.cidade }}</td>
                            <td>{{ local.estado }}</td>
                            {#                            <td>{{ lista_empilhadeira.caracteristicas }}</td>#}
                            {#                            <td>{{ lista_empilhadeira.aplicacoes }}</td>#}
                            <td>
                                <a href="{{ path('local_show', {'id': local.id}) }}" class="btn btn-sm btn-outline-primary">Ver</a>
                                <a href="{{ path('local_edit', {'id': local.id}) }}" class="btn btn-sm btn-outline-secondary">Editar</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">Nenhum registro encontrado</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

